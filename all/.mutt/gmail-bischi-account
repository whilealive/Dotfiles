# ==================================================================
# FILE     .mutt/gmail-bischi-account
# MACHINE  all
# INFO     account: bruno.bischi@gmail.com
#          for use with mbsync
#
# DATE     11.05.2014
# OWNER    Bischofberger
# ==================================================================


# Basic stuff
set realname      = "Bruno Bischofberger"
set from          = "bruno.bischi@gmail.com"
set use_from      = yes
set envelope_from = yes

# Folders for use with mbsync
set spoolfile     = "~/Maildir/gmail-bischi/INBOX"
set mbox_type     = Maildir
set folder        = "~/Maildir/gmail-bischi"
set postponed     = "~/Maildir/gmail-bischi/[Gmail]_Drafts/"
set trash         = "~/Maildir/gmail-bischi/[Gmail]_Trash/"

# Gmail saves automatically sent e-mail to +[Gmail]/Sent, 
# so we do not want dublicates
unset record

# include all gmail folders synced by mbsync to ~/Maildir/
mailboxes ~/Maildir/gmail-bischi/INBOX ~/Maildir/gmail-bischi/[Gmail]_Trash
#~/Maildir/gmail-bischi/[Gmail]_Trash ~/Maildir/gmail-bischi/[Gmail]_Sent\ Mail ~/Maildir/gmail-bischi/[Gmail]_Drafts

# sending mails via SMTP
# password management via gpg, set in .muttrc
set smtp_pass	  = $my_pw_gmail_bischi
set smtp_url      = smtps://bruno.bischi@gmail.com@smtp.gmail.com

# gmail specific, mark read mails as "read" after syncing
set imap_peek = no
