# Basic stuff
set realname      = "Bruno Bischofberger"
set from          = "bischofberger@fastmail.fm"
set use_from      = yes
set envelope_from = yes

# Folders for use with mbsync
set spoolfile     = "~/Maildir/fastmail/INBOX"
set mbox_type     = Maildir
set folder        = "~/Maildir/fastmail"
set postponed     = "~/Maildir/fastmail/Drafts/"
set record        = "~/Maildir/fastmail/Sent\ Items/"
set trash         = "~/Maildir/fastmail/Trash/"
# old port
#set postponed     = "~/Maildir/fastmail/INBOX_Drafts/"
#set record        = "~/Maildir/fastmail/INBOX_Sent\ Items/"
#set trash         = "~/Maildir/fastmail/INBOX_Trash/"

# include all gmail folders synced by mbsync to ~/Maildir/
mailboxes ~/Maildir/fastmail/INBOX ~/Maildir/fastmail/Sent\ Items ~/Maildir/fastmail/Trash
mailboxes ~/Maildir/fastmail/suckless-dev
mailboxes ~/Maildir/local/archive
# old port
#mailboxes ~/Maildir/fastmail/INBOX ~/Maildir/fastmail/INBOX_Archive ~/Maildir/fastmail/INBOX_Sent\ Items ~/Maildir/fastmail/INBOX_Trash ~/Maildir/fastmail/INBOX_suckless-dev

# sending mails via SMTP
# password management via gpg, set in .muttrc
set smtp_pass	  = $my_pw_fastmail
