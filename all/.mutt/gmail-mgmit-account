# ==================================================================
# FILE     .mutt/gmail-mgmit-account
# MACHINE  all
# INFO     account: mgmit.zhaw@gmail.com
#          for use with mbsync
#
# DATE     18.01.2014
# OWNER    Bischofberger
# ==================================================================


# Basic stuff
set realname      = "Bruno Bischofberger"
set from          = "mgmit.zhaw@gmail.com"
set use_from      = yes
set envelope_from = yes

# Folders for use with mbsync
set spoolfile     = "~/Maildir/gmail-mgmit/INBOX"
set mbox_type     = Maildir
set folder        = "~/Maildir/gmail-mgmit"
set trash         = "~/Maildir/gmail-mgmit/[Gmail]_Papierkorb/"

# Gmail saves automatically sent e-mail to +[Gmail]/Sent, 
# so we do not want dublicates
unset record

# include all gmail folders synced by mbsync to ~/Maildir/
mailboxes ~/Maildir/gmail-mgmit/INBOX ~/Maildir/gmail-mgmit/[Gmail]_Gesendet ~/Maildir/gmail-mgmit/[Gmail]_Papierkorb

# sending mails via SMTP
# password management via gpg, set in .muttrc
set smtp_pass	  = $my_pw_gmail_mgmit
set smtp_url      = smtps://mgmit.zhaw@gmail.com@smtp.gmail.com
